---
title: Titre index
layout: layout.njk
pagination:
  data: posts
  size: 12
  alias: post
permalink: "posts/page-{{pagination.pageNumber+1}}/index.html"
---

<a class="btn btn-primary" href="{{ pagination.href.previous }}">Précédent</a>
<a class="btn btn-primary" href="{{ pagination.href.next }}">Suivant</a>

<ul>
  {% for post in pagination.items %}
  <li>
    <h2>{{ post.title }}</h2>
    <p>{{ post.description }}</p>
    <a href="/posts/{{ post.title | slug }}" class="btn btn-primary"
      >Voir l'article</a
    >
  </li>
  {% else %}
  <li>This would display if the 'item' collection were empty</li>
  {% endfor %}
</ul>
